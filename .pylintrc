[MESSAGES CONTROL]

# Disable some pylint checks that might not be relevant for Pygame
disable = missing-docstring,
          invalid-name,
          too-many-instance-attributes,
          too-few-public-methods,
          no-member,
          import-error

[BASIC]

# Limit the number of characters on a single line to 100
max-line-length = 100

[VARIABLES]

# Naming style for variables: snake_case
const-naming-style = snake_case
dummy-variables-rgx = _|dummy

[TYPECHECK]

# Use Pygame-specific type hints where applicable
generated-members = pygame.*
